---
import { GoogleFontsOptimizer } from 'astro-google-fonts-optimizer';
import background from '../assets/background-low.jpg';
import { Analytics } from '../components/Analytics';
export interface Props {
	title: string;
}

const { title } = Astro.props;

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<GoogleFontsOptimizer
			url="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700&display=swap"
		/>
	</head>
	<body class="flex min-h-screen flex-col justify-center">
		<Analytics client:only />
		<img
			src={background}
			alt="mario kart background"
			class="fixed inset-0 -z-[1] min-h-screen w-screen max-w-none object-cover blur-[6px]"
			loading="eager"
		/>
		<div class="fixed inset-0 -z-[1] bg-slate-900 opacity-60"></div>
		<header class="fixed top-0 z-20 flex w-full justify-center">
			<ul
				class="flex max-w-max items-center justify-center gap-5 rounded-b-lg bg-slate-100 bg-opacity-75 px-12 py-5 backdrop-blur-lg"
			>
				<li>
					<a
						class={`bold font-bold tracking-wide ${
							currentPath === ''
								? 'underline underline-offset-2'
								: ''
						}`}
						href="/">Setup</a
					>
				</li>
				<li>
					<a
						class={`bold font-bold tracking-wide ${
							currentPath.includes('items')
								? 'underline underline-offset-2'
								: ''
						}`}
						href="/items">Items</a
					>
				</li>
			</ul>
		</header>
		<main
			class="flex flex-col items-center justify-center gap-12 py-20 px-6 md:py-40"
		>
			<slot />
		</main>
		<style is:global>
			html {
				font-family: 'Orbitron', system-ui, sans-serif;
				background-color: #f6f6f6;
			}
		</style>
	</body>
</html>
