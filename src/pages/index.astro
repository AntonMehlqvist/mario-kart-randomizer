---
import Randomizer from '../components/Randomizer';
import Layout from '../layouts/Layout.astro';
import background from '../assets/background-low.jpg';
---

<Layout title="Mariokart randomizer">
	<img
		src={background}
		alt="mario kart background"
		class="absolute inset-0 object-cover w-screen h-screen blur-[6px] -z-[1]"
		loading="eager"
	/>
	<div class="absolute inset-0 bg-slate-900 opacity-60 -z-[1]"></div>
	<main class="flex flex-col items-center justify-center gap-6">
		<h1 class="text-2xl font-bold text-gray-50">Mariokart randomizer</h1>
		<Randomizer client:load />
	</main>
</Layout>
